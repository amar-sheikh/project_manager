<div class="card">
  <div class="card-body">
    <h2 class="card-title d-flex justify-content-between mb-4">
      <span>Projects</span>
      <%= link_to 'New Project', new_project_path, class: "btn btn-primary" %>
    </h2>

    <% @projects.each do |project| %>
      <%= link_to project do %>
        <div class="card">
          <div class="card-body">
            <div class="d-flex justify-content-between">
              <div>
                <h4 class="card-title  d-inline"><%= project.name %></h4>
                <p><%= project.description %></p>
              </div>
              <div>
                <%= link_to 'Delete', project, data: { turbo_method: :delete, turbo_confirm: "Are you sure to delete '#{project.name}'?" }, class: 'btn btn-danger' %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
