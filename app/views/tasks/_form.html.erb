    <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

    <ul>
      <% task.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div>
  <%= form.label :name, style: "display: block" %>
  <%= form.text_field :name, class: 'form-control mb-3' %>
</div>

<div>
  <%= form.label :description, style: "display: block" %>
  <%= form.text_area :description, class: 'form-control mb-3' %>
</div>

<div>
  <%= form.label :assigned_to, style: "display: block" %>
  <%= form.collection_select :assigned_to, User.all, :id, :email, {include_blank: 'Select user'}, class: 'form-select mb-3' %>
